        <TextView
            android:layout_weight="0.7"
            android:layout_marginTop="10dp"
            android:background="@color/cardBgColor"
            android:padding="10dp"
            android:id="@+id/note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoTitle"
            android:textColor="@color/contentTextColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Subscribe to your favorite channel &amp; get 130 coins.\nDO NOT unsubscribe or cancel like, we will block your account if you unsubscribe any channel."
            android:textSize="16sp" />

<!--    </com.google.android.material.card.MaterialCardView>-->

    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.button.MaterialButton
            android:layout_weight="0.5"
            android:layout_marginStart="20dp"
            android:id="@+id/subscribe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Subscribe"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/nextBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note" />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toEndOf="@id/subscribe"
            android:id="@+id/nextBtn"
            android:text="See Next"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note" />
    </LinearLayout>


</LinearLayout>